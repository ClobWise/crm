{
  "name": "crm",
  "version": "0.1.0",
  "description": "An friendly neigherhood CRM.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "check:types": "tsc",
    "check:cycles": "tsx ./scripts/cycles.ts",
    "dev": "dotenv -- tsx watch --clear-screen=false ./src/main.ts",
    "dev:db:migrate": "dotenv -- tsx ./src/migrate.ts",
    "dev:db:generate": "drizzle-kit generate:pg",
    "test": "dotenv -e .env.test -- tsx --test",
    "test:gql": "graphql-codegen --c ./test/helper/codegen.ts",
    "test:db:setup": "dotenv -e .env.test -- tsx ./test/helper/db.ts",
    "test:db:teardown": "dotenv -e .env.test -- tsx ./test/helper/db.ts --teardown"
  },
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "volta": {
    "node": "20.10.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.5.0",
    "@pothos/core": "^3.41.0",
    "@webf/base": "^0.5.0",
    "drizzle-kit": "^0.20.13",
    "drizzle-orm": "^0.29.3",
    "graphql": "^16.8.1",
    "hono": "^3.12.7",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/madge": "^5.0.3",
    "@types/node": "^20.11.7",
    "dotenv": "^16.4.1",
    "dotenv-cli": "^7.3.0",
    "madge": "^6.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
